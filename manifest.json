{
    "manifest_version": 3,
    "name": "Bitcoin Price Checker",
    "version": "1.0",
    "description": "A simple Chrome extension to check the current Bitcoin price",
    "host_permissions": [
      "https://api.coindesk.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  